################
#   shortcuts  #
################
set $zathura Zathura: (z)dark (w)light
mode "$zathura" {
    bindsym z exec zathura --config-dir=~/.config/zathura-dark/, mode "default"
    bindsym w exec zathura, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+z mode "default"

    }
bindsym $mod+i exec firefox
bindsym $mod+z mode "$zathura"
bindsym $mod+comma exec udiskie-dmenu
bindsym $mod+y exec $term -e ranger
bindsym $mod+Shift+greater exec --no-startup-id mpc -p 6600 next && notify-send "Now Playing:" "$(mpc current)" 
bindsym $mod+Shift+less exec --no-startup-id  mpc -p 6600 prev && notify-send "Now Playing:" "$(mpc current)"
bindsym $mod+period exec --no-startup-id  mpc -p 6600 toggle
bindsym $mod+grave exec --no-startup-id xfce4-terminal --drop-down
bindsym XF86MonBrightnessUp exec brightnessctl s +2%
bindsym XF86MonBrightnessDown exec brightnessctl s 2%-
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -2%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +2%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
